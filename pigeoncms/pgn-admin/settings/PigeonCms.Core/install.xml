<?xml version="1.0" encoding="utf-8" ?>
<install
    installerVersion="1.0.0"
    type="plugin"
    version="1.0.0"
    core="true"
    namespace="PigeonCms"
    name="Core"
    author="p-ice"
    creationDate="2015-09-22"
    copyright="Copyright(C) 2015 Nicola Ridolfi. All rights reserved."
    license=""
    authorEmail="picce@yahoo.it"
    authorUrl="https://github.com/picce/pigeoncms"
    description="PigeonCms Core engine. Edit with caution"
    iconClass="fa fa-warning"
    panelClass="panel-danger"
    >

  <params group="">

    <param name="CurrentMasterPage" cssClass="fa-folder-open" type="combo" default="" label="Pigeon masterpage" description="">
      <datasource SelectMethod="GetList" SelectParams="" TypeName="PigeonCms.MasterPagesObjManager" />
    </param>

    <param name="CurrentTheme" cssClass="fa-folder-open" type="combo" default="" label="Pigeon default theme" description="">
      <datasource SelectMethod="GetList" SelectParams="" TypeName="PigeonCms.MasterPagesObjManager" />
    </param>

    <param name="DocsPrivatePath" type="text" default="~/Private/Docs/" label="Private documents path" />

    <param name="UseCache" type="combo" default="1" label="Global use of Cache">
      <option value="1" label="Yes"></option>
      <option value="0" label="No"></option>
    </param>

    <param name="UseLog" type="combo" default="1" label="Global use of LogProvider">
      <option value="1" label="Yes"></option>
      <option value="0" label="No"></option>
    </param>

    <param name="TinyEditor-BasicHtml-menubar" type="text" 
           default="false" 
           label="TinyMCE editor BasicHTML menu"
           description="Menu bar configuration. See http://www.tinymce.com/wiki.php/Configuration:menubar" />

    <param name="TinyEditor-BasicHtml-toolbar" type="text" 
           default="bold italic | link | alignleft aligncenter alignright"
           label="TinyMCE editor BasicHTML toolbar"
           description="Menu bar configuration. See http://www.tinymce.com/wiki.php/Configuration:toolbar" />


    <param name="TinyEditor-Html-menubar" type="text" default="true"
           label="TinyMCE editor HTML menu"
           description="Menu bar configuration. See http://www.tinymce.com/wiki.php/Configuration:menubar" />

    <param name="TinyEditor-Html-toolbar" type="text"
           default="true"
           label="TinyMCE editor HTML toolbar"
           description="Menu bar configuration. See http://www.tinymce.com/wiki.php/Configuration:toolbar" />


  </params>

</install>
